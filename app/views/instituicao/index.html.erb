<html lang="pt">
<head>
  <title>Instituições</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

    <div class="container mt-3">
    <center>
        <h2>Instituicões</h2>
        <p>Tabela de instituicões cadastradas:</p>   
    </center>         
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>CNPJ</th>
            <th>Tipo</th>
            <th>Matriculas</th>
            <th>Ação</th>
        </tr>
        </thead>
        <tbody>
            <% @instituicoes.each do |instituicao| %>
            <tr>
                <td>
                    <%=instituicao.id %>
                </td>
                <td>
                    <%=instituicao.nome %>
                </td>
                <td>
                    <%=instituicao.cnpj %>
                </td>
                <td>
                    <%=instituicao.tipo %>
                </td>
                <td>
                    <%= link_to "Acessar matriculas", "instituicao/#{instituicao.id}/matricula" %>
                </td>
                <td>
                    <%= link_to "Excluir Instituição", "instituicao/#{instituicao.id}/destroy" %>
                </td>
            </tr> 
            <% end %>
        </tbody>
    </table>
    </div>

</body>
<center>
<button type="button" class="btn btn-dark">
    <%= link_to "Cadastrar instituição", new_instituicao_path %> <br>
</button>
<button type="button" class="btn btn-dark">
    <%= link_to "Voltar", billinho_path %>
</button>
</center>
