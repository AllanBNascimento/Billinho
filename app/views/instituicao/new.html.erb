<head>
  <title>Cadastrar Instituição</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container mt-3">
    <h2>Cadastrar Instituição</h2>
        <form action="/instituicao" method = "post">
        <% if @instituicao.errors.any? %>
            <div id="error_explanation">
                <h2><%= pluralize(@instituicao.errors.count, "Erro") %> de cadastro:</h2>
                <ul>
                    <% @instituicao.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>
            <div class="mb-3 mt-3">
                <label for="nome">Nome da instituição:</label>
                <input type="nome" class="form-control" id="nome" placeholder="nome da instituição" name="nome">
            </div>
            <div class="mb-3">
                <label for="cnpj">CNPJ:</label>
                <input type="cnpj" class="form-control" id="cnpj" placeholder="CNPJ" name="cnpj">
            </div>
            <div class="mb-3">
                <label for="tipo">Tipo:</label>
            </div>
            <div class="form-check">
                <input type="radio" class="form-check-input" id="radio1" name="tipo" value="Universidade" checked>
                <label class="form-check-label" for="radio1">Universidade</label>
            </div>
            <div class="form-check">
                <input type="radio" class="form-check-input" id="radio2" name="tipo" value="Escola">
                <label class="form-check-label" for="radio2">Escola</label>
            </div>
            <div class="form-check">
                <input type="radio" class="form-check-input" id="radio3" name="tipo" value="Creche">
                <label class="form-check-label" for="radio3">Creche</label>
            </div>

            <button type="submit" class="btn btn-outline-dark">Cadastrar</button>
        </form>
    </div>
</body>