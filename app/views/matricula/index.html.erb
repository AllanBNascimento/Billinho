        <td><center>
            <%= link_to matricula.quantidade_de_faturas, "/matricula/#{matricula.id}" %>
        </td><td></td>
        <td><center>
            <%= matricula.dia_de_vencimento_das_faturas %>
        </td><td></td>
        <td><center>
            <%= matricula.instituicao_id%>
        </td><td></td>
        <td><center>
            <%= matricula.aluno_id %>
        </td><td></td>
    </tr> 
    <% end %>
    <tr></tr>
</table>

