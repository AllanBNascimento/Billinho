<center>
<h1>Matriculas</h1>
<styles td: center>
<table>
    <tr>
        <td><center><b>
            Id
        </td><td></td>
        <td><center><b>
            Valor total do curso
        </td><td></td>
        <td><center><b>
            Quantidade de faturas
        </td><td></td>
        <td><center><b>
            Dia de vencimento
        </td><td></td>
        <td><center><b>
            Id_instituicao
        </td><td></td>
        <td><center><b>
            Id_aluno
        </td><td></td>
    </tr> 
    <% @matriculas.each do |matricula| %>
        <tr>
        <td><center>
            <%= matricula.id %>
        </td><td></td>
        <td><center>
            <%= "R$ %.2f" %matricula.valor_total_do_curso %>
