<head>
  <title>Nova matricula</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container mt-3">
    <h2>Nova matricula</h2>
        <form action="/matricula" method = "post">
            <% if @matricula.errors.any? %>
            <div id="error_explanation">
                <h2><%= pluralize(@matricula.errors.count, "Erro") %> de cadastro:</h2>
                <ul>
                    <% @matricula.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>
            <div class="mb-3 mt-3">
                <label for="valor_total_do_curso">Valor total do curso:</label>
                <input type="valor_total_do_curso" class="form-control" id="valor_total_do_curso" placeholder="Valor total do curso" name="valor_total_do_curso">
            </div>
            <div class="mb-3">
                <label for="quantidade_de_faturas">Quantidade de Faturas:</label>
                <input type="quantidade_de_faturas" class="form-control" id="quantidade_de_faturas" placeholder="numero de faturas" name="quantidade_de_faturas">
            </div>
            <div class="mb-3">
                <label for="dia_de_vencimento_das_faturas">Dia de vencimento:</label>
                <input type="dia_de_vencimento_das_faturas" class="form-control" id="dia_de_vencimento_das_faturas" placeholder="dia de vencimento das faturas" name="dia_de_vencimento_das_faturas">
            </div>
            <div class="mb-3 mt-3">
                <label for="nome_do_curso">Nome do curso:</label>
                <input type="nome_do_curso" class="form-control" id="nome_do_curso" placeholder="Nome do curso" name="nome_do_curso">
            </div>

            <div class="mb-3 mt-3">
                <label for="instituicao_id">Id da instituição:</label>
                <input type="instituicao_id" class="form-control" id="instituicao_id" placeholder="Id da instituição" name="instituicao_id">
            </div>
            <div class="mb-3 mt-3">
                <label for="aluno_id">Id do aluno:</label>
                <input type="aluno_id" class="form-control" id="aluno_id" placeholder="Id do aluno" name="aluno_id">
            </div>


            <button type="submit" class="btn btn-outline-dark">Cadastrar</button>
        </form>
    </div>
</body>









<h1>Nova matricula </h1>

