<html lang="pt">
<head>
  <title>Matriculas</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

    <div class="container mt-3">
    <center>
        <h2>Matriculas</h2>
        <p>Tabela de matriculas cadastradas:</p>   
    </center>         
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Id</th>
            <th>Curso</th>
            <th>Valor total do curso</th>
            <th>Quantidade de faturas</th>
            <th>Dia de vencimento</th>
            <th>Id_instituicao</th>
            <th>Id_aluno</th>
        </tr>
        </thead>
        <tbody>
            <% @matriculas.each do |matricula| %>
            <tr>
                <td>
                    <%= matricula.id %>
                </td>
                <td>
                    <%= matricula.nome_do_curso %>
                </td>
                <td>
                    <%= "R$ %.2f" %matricula.valor_total_do_curso %>
                </td>
                <td>
                    <%= link_to matricula.quantidade_de_faturas, "matricula/#{matricula.id}/fatura" %>
                </td>
                <td>
                    <%= matricula.dia_de_vencimento_das_faturas %>
                </td>
                <td>
                    <%= matricula.instituicao_id%>
                </td>
                <td>
                    <%= matricula.aluno_id %>
                </td>
            </tr> 
            <% end %>
        </tbody>
    </table>
    </div>

</body>
<center>
    <button class="btn btn-outline-dark">
        <%= link_to "Nova matricula", "matricula/new" %>
    </button>
    <button class="btn btn-outline-dark">
        <%= link_to "Voltar", "/#{parametro}" %>
    </button>
</center>